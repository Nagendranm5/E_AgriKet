<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Users</title>
</head>
<body>
	<table>
			<thead>
				<th>UserName</th>
				<th>Email</th>
				<th>Mobile</th>
				<th>Role</th>
				<th>Active</th>
			</thead>
			<tbody>
				<% @users.each do |user| %>
					<td><%= user.username %></td>
					<td><%= user.email %></td>
					<td><%= user.mobile %></td>
					<td><%= user.role %></td>
					<td><%= user.active %></td>
					<td><%= link_to "Edit", edit_user_path(user) %></td>
					<td><%= link_to "Delete", delete_user_path(user), method: :delete %></td>
					</tr>
				<% end %>
			</tbody>
		</table>

		<%= link_to "New User", signup_path %>

		<%= link_to 'Logout', logout_path %>
</body>
</html>
