<h2>Sign In</h2>

<%= form_with(url: sessions_path) do |signin_form| %>
	<div>
		<%= signin_form.label :email %>
		<%= signin_form.text_field :email, placeholder: "Enter Email-ID", required: true %>
	</div>

	<div>
		<%= signin_form.label :password %>
		<%= signin_form.password_field :password, placeholder: "Enter Password", required: true %>
	</div>

	<div>
		<%= signin_form.submit 'Log In' %>
	</div>
<% end %>

<%= link_to 'Signup', signup_path %>
